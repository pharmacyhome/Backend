@model PharmacyHome.Medicine[]

@{
    ViewData["Title"] = "Результаты поиска";
}

<h1>Результаты поиска</h1>

@if(Model.Length==0)
{
    <p>Ничего не найдено</p>
}
else
            {
                <ul>
                    @foreach(var medicine in Model)
                {
                    <li><a href="@Url.Action("Index", "Medicine", new {id = medicine.Id })">@medicine.Title</a></li>
                }
                </ul>
            }
